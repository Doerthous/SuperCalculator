<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.tax.SlavaryFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:text="每月工资"
                android:layout_height="match_parent"
                android:id="@+id/textView11"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal|center"
                android:layout_width="0dp"
                android:textColor="@color/colorF8F8F8"
                android:textSize="18sp" />

            <EditText
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/taxEtSlavary1"
                android:layout_weight="2"
                android:gravity="right|center_horizontal|center"
                android:background="@null"
                android:layout_width="0dp"
                android:textColor="@color/colorF8F8F8"
                android:textSize="18sp"
                android:hint="请输入每月工资" />

        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/colorF8F8F8" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="invisible">

            <TextView
                android:text="起征点"
                android:layout_height="match_parent"
                android:id="@+id/textView12"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal|center"
                android:layout_width="0dp"
                android:textColor="@color/colorF8F8F8"
                android:textSize="18sp" />

            <EditText
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/taxEtQZD"
                android:layout_weight="2"
                android:gravity="center_vertical|center_horizontal|center"
                android:background="@null"
                android:layout_width="0dp"
                android:textColor="@color/colorF8F8F8"
                android:textSize="18sp" />

        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/colorF8F8F8"
            android:visibility="invisible" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="invisible">

            <TextView
                android:text="所在地"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/textView17"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal|center"
                android:textColor="@color/colorF8F8F8"
                android:textSize="18sp" />

            <Spinner
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/taxSpnLocale"
                android:layout_weight="2"
                android:backgroundTint="@color/colorF8F8F8" />
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/colorF8F8F8"
            android:visibility="invisible" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="invisible">

            <TextView
                android:text="五险一金"
                android:layout_height="match_parent"
                android:id="@+id/textView20"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textColor="@color/colorF8F8F8"
                android:layout_width="0dp"
                android:gravity="center_vertical|center_horizontal|center"
                android:visibility="invisible" />

            <TextView
                android:layout_height="match_parent"
                android:id="@+id/textView18"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:visibility="invisible"
                android:paddingRight="0dp"
                android:paddingEnd="0dp" />
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/colorF8F8F8"
            android:visibility="invisible" />
    </LinearLayout>
</FrameLayout>
